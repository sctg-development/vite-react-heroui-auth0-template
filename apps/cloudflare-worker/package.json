{
  "name": "cloudflare-worker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "dev:env": "bash -c 'cp ../../.env .dev.vars && wrangler dev'",
    "preview:env": "bash -c 'cp ../../.env .dev.vars && wrangler dev --port 8787'",
    "start": "wrangler dev",
    "build": "echo 'Cloudflare Worker does not require build step'",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint ./src/**/*.{ts,tsx} --fix",
    "clean": "rm -rf .wrangler .dev.vars .turbo",
    "cf-typegen": "wrangler types"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.10",
    "@cloudflare/workers-types": "^4.20260207.0",
    "@types/node": "22.17.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jiti": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "~3.2.4",
    "wrangler": "^4.63.0"
  },
  "dependencies": {
    "jose": "^6.1.3"
  }
}
